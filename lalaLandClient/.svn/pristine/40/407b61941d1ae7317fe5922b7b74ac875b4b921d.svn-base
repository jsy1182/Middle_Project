                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="buybtn" mnemonicParsing="false" onAction="#buybtn" text="구매" />
               </children>
            </HBox>
         </children>
      </VBox>
